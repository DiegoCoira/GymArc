<!-- res/drawable/button_3d.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#0000FF"
                android:endColor="#000080"
                android:angle="270" />
            <corners android:radius="8dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#0000FF"
                android:endColor="#0000A0"
                android:angle="270" />
            <corners android:radius="8dp" />
            <padding
                android:left="10dp"
                android:top="0dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
